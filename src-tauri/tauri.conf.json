{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "palm-counting-ai",
  "version": "1.1.23",
  "identifier": "com.jajavalentino.palm-counting-ai",
  "build": {
    "beforeDevCommand": "npm run build:placeholder && npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Palm-Counting-Ai v1.1.23",
        "width": 800,
        "height": 600,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/infer_worker"
    ],
    "resources": [
      "python_ai",
      "scripts"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "languages": [
          "English"
        ]
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      }
    }
  }
}